<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900">
    <div class="w-full  p-10 text-white">
        <a class="px-5 py-2 bg-blue-500 rounded-lg ml-3" href="/">Back to Home</a>
        <h1 class="text-3xl tracking-tighter mt-10 mb-3">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <!-- user -->
            <% if(users.length>0){%>
                <%users.forEach(function(user){%>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-72 bg-zinc-700 rounded-lg  overflow-hidden">
                            <img class="w-full h-full object-cover object-top" src="<%=user.image%>"
                                alt="profile image">
                        </div>
                        <h3 class="text-xl mt-1 tracking-tighter">
                            <%=user.name%>
                        </h3>
                        <h5 class="text-zinc-500">
                            <%=user.dob%>
                        </h5>
                        <h5 class="text-zinc-500">
                            <%=user.phone%>
                        </h5>
                        <h5 class="text-zinc-500">
                            <%=user.email%>
                        </h5>
                       
                        <div class="flex gap-20">
                            <a class="text-yellow-200" href="/edit/<%=user._id%>">Edit User</a>
                            <a class="text-red-400" href="/delete/<%=user._id%>">Delete User</a>
                        </div>
                    </div>
                    <%})%>
                        <%}else{%>
                            <h3 class="text-zinc-500">No users yet.</h3>
                            <%}%>

        </div>
    </div>
</body>

</html>